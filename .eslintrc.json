{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "standard",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],
  "plugins": [
    "react",
    "prettier",
    "standard"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "parser": "flow"
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "import/order": [
      "error",
      {
        "newlines-between": "always"
      }
    ],
    "no-console": "error"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "it": true,
    "expect": true,
    "jest": true,
    "beforeAll": true,
    "describe": true,
    "__DEV__": true
  }
}